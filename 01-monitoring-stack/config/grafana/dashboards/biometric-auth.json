{
  "dashboard": {
    "id": null,
    "title": "Biometric Authentication",
    "tags": ["biometric", "security", "authentication"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Authentication Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(biometric_auth_attempts_total{result=\"success\"}[5m]) / rate(biometric_auth_attempts_total[5m])",
            "legendFormat": "Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.8
                },
                {
                  "color": "green",
                  "value": 0.95
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Authentication Attempts",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(biometric_auth_attempts_total[5m])",
            "legendFormat": "Attempts/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "WebAuthn Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(webauthn_authentication_success_total[5m]) / rate(webauthn_authentication_attempts_total[5m])",
            "legendFormat": "WebAuthn Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Fingerprint Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(fingerprint_recognition_success_total[5m]) / rate(fingerprint_recognition_attempts_total[5m])",
            "legendFormat": "Fingerprint Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Authentication Methods",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (method) (rate(biometric_auth_attempts_total[5m]))",
            "legendFormat": "{{method}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Authentication Results",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (result) (rate(biometric_auth_attempts_total[5m]))",
            "legendFormat": "{{result}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 7,
        "title": "Authentication Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(biometric_auth_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(biometric_auth_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(biometric_auth_duration_seconds_bucket[5m]))",
            "legendFormat": "99th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Latency (seconds)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "QR Code Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(qr_code_generation_total[5m])",
            "legendFormat": "QR Codes Generated"
          },
          {
            "expr": "rate(qr_code_validation_success_total[5m])",
            "legendFormat": "QR Codes Validated"
          }
        ],
        "yAxes": [
          {
            "label": "QR Codes/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 9,
        "title": "Security Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(biometric_auth_attempts_total{result=\"suspicious\"}[5m])",
            "legendFormat": "Suspicious Activity"
          },
          {
            "expr": "rate(biometric_auth_attempts_total{result=\"unauthorized\"}[5m])",
            "legendFormat": "Unauthorized Access"
          },
          {
            "expr": "rate(biometric_auth_attempts_total{result=\"failed\"}[5m])",
            "legendFormat": "Failed Attempts"
          }
        ],
        "yAxes": [
          {
            "label": "Events/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
